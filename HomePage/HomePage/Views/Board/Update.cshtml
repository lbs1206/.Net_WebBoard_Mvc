
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
<div>
    <div class="wrapper">
        <div class="form-signin" style="margin-top: 100px; margin-bottom: 100px;">
            <h2 class="form-signin-heading" align="center">게시판 글 작성</h2>
            <form method="post" action="@Url.Action("Update","Board")">
                <table id="table_content" width="1200" align="center">
                    <tr>
                        <th width="10%">제목</th>
                        <td width="90%">
                            <input type="text" maxlength="30" name="Title" id="Title" size="108" value="@ViewBag.Subject" style="margin-left: 10px;" required >
                        </td>
                    </tr>
                    <tr>
                        <th width="10%">내용</th>
                        <td width="90%">
                            <textarea rows="20" cols="110" name="Contents" id="Contents" style="margin-left: 10px;overflow-x:hidden;" wrap="hard" required>@ViewBag.Contents</textarea>
                        </td>
                    </tr>

                    <tr height="40px">
                        <td colspan="2" align="center" style="border: none;">
                            <input type="hidden" value="@ViewBag.ArticleIDX" id="ArticleIDX" name="ArticleIDX" />
                            <input type="submit" id="btnSave" onclick="return fnUpdateCheck();" value="수정" />
                            <input type="button" value="취소" onclick="javascript:history.back()">
                        </td>
                    </tr>
                </table>
                
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function () {
            
        var result = '@ViewBag.Result';
            if (result == 'OK') {
                alert("정상적으로 수정되었습니다.");
                location.href = "/Board/List?pN=1&start=1"

            }

            if (result == 'FAIL') {
                alert("수정에 실패하였습니다.");
            }
        });

        function fnUpdateCheck() {
            if ($("#Title").val() == "") {
                alert("제목을 입력해주십시오.")
                $("#MemberID").focus();
                return false;
            }
            if ($("#Contents").val() == "") {
                alert("내용을 입력해주십시오.")
                $("#MemberPWD").focus();
                return false;
            }
            return true;
        }

       

</script>
}

